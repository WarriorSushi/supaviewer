# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public Supabase URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public anonymous key (safe to expose to client)
# This key has RLS policies applied
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (KEEP SECRET - server-side only)
# Has bypass RLS capabilities - DO NOT expose to client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here


# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Public app URL - used for OAuth redirects and metadata
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin email addresses (comma-separated)
# These emails will have full admin access to the platform
# IMPORTANT: Keep this secure and never commit actual emails to git
# Must match the admin emails configured in database RLS policies
ADMIN_EMAILS=your-admin-email@example.com


# ==============================================================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
#
# Setup Instructions:
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URIs:
#    - http://localhost:3000/auth/callback (development)
#    - https://your-domain.com/auth/callback (production)

# Google OAuth Client ID (public - safe to expose)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth Client Secret (KEEP SECRET - server-side only)
GOOGLE_CLIENT_SECRET=your-google-client-secret


# ==============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ==============================================================================

# Vercel Analytics (auto-configured on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# PostHog Analytics (if using)
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# Sentry Error Tracking (if using)
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=


# ==============================================================================
# OPTIONAL: EMAIL SERVICE (for notifications)
# ==============================================================================

# Resend API Key (if implementing email notifications)
# RESEND_API_KEY=your-resend-api-key


# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================

# Node environment (auto-set by Next.js)
# NODE_ENV=development
